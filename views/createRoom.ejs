<!DOCTYPE html>
<html>

<head>
    <title>Simple Group Chat on Node.js</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font: 13px Helvetica, Arial;
        }

        form {
            background: #fff;
            padding: 3px;
            position: fixed;
            bottom: 0;
            width: 500px;
            border-color: #000;
            border-top-style: solid;
            border-top-width: 1px;
        }

        form input {
            border-style: solid;
            border-width: 1px;
            padding: 10px;
            width: 64%;
            margin-right: .5%;
        }

        form button {
            width: 5%;
            background: rgb(130, 224, 255);
            border: none;
            padding: 10px;
            margin-right: -0.5%;
            width: 60px;
        }

        #messages {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        #messages li {
            padding: 5px 10px;
        }

        #messages li:nth-child(odd) {
            background: #eee;
        }

        .button-right {
            width: 22%;
            float: right;
            background-color: rgb(255 124 124);
            border: none;
            color: #000;
            padding: 10px;
        }
        .chatBox{
            max-width: 500px;
            margin: auto;
            height: 100vh;
            box-shadow: 0 0 5px #dfdfdf;
        }
        .header{
            padding: 10px;
            text-align: center;
        }
        .creat-btn{ 
            padding: 8px 26px;
            background-color: aqua;
            border: none;
            margin-top: 120px;
        }
    </style>
    <script src="../../socket.io/socket.io.js"></script>
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
</head>

<body>
    <div class="chatBox" style="text-align: center;">
        <div class="header">
            <h1>Chat App</h1>
        </div>
        <button type="button" class="creat-btn" onclick=createRoom()>Create Room</button>

        <ul id="messages"></ul>

    </div>
    <script>
        var roomId;
        //get room id
        var socket = io.connect('http://localhost:8080');
        function createRoom(){
            socket.emit('create', 'room1');
        }
        socket.on('socket_created', (roomId) => {
            $('#messages').append($('<li>').html('ðŸ”µ <i> Please join the room: ' + roomId +'</i><p><a href="http://localhost:8080/room:'+ roomId +'">http://localhost:8080/room:'+ roomId +'</a></p>'));
        })
    </script>
</body>

</html>